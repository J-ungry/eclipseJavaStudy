package ch02.ex02.quiz.quiz02Answer;

public class Bus {

	
	int busNum;
	int income;
	int passengerCnt;
	
	public Bus(int busNum) {
		this.busNum = busNum;
	}
	

	//method
	
	public void take(int money) {
		this.income += money;
		passengerCnt ++;
	}
	
	public void showBusInfo() {
		System.out.printf("%d 번 버스의 승객은 %d 명이고, 수입은 %d 원 입니다. \\n",busNum,passengerCnt,income);
	}
}
