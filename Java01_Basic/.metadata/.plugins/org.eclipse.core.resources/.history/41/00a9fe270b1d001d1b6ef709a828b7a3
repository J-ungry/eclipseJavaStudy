package ch05.quiz;

public class Quiz09 {

	public static void main(String[] args) {
		int arr[][] = {
				{90,90,90},
				{20,20,20},
				{30,30,30},
				{40,40,40},
				{50,50,50}
				};
		System.out.println("번호\t국어\t영어\t수학\t합계\t평균");
		for(int i=0; i<arr.length; i++) {
			int total = 0;
			int avg = 0;
			System.out.printf("%d\t",i+1);
			for(int j=0; j<arr[i].length;j++) {
				total += arr[i][j];
				System.out.printf("%d\t",arr[i][j]);
			}
			avg = total/arr[i].length;
			System.out.printf("%d\t%d\t",total,avg);
			System.out.println();
			
		}

	}

}
